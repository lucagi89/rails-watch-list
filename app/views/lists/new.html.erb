<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fG1vdmllfGVufDB8fDB8fHww)">
  <%= link_to lists_path do%>
  <div class="back-btn">
    <i class="fa-solid fa-backward"></i>
  </div>
  <% end %>
  <h1>Add a New List </h1>
</div>

<div class="form-container">
  <%= simple_form_for(@list) do |f| %>
    <%= f.label :name, label: "List name" %>
    <%= f.input :name, label: false %>
    <%= f.input :photo, as: :file, label: "Add a photo"%>
    <% if @list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
        <ul>
          <% @list.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
