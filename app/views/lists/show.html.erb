
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <%= link_to lists_path do%>
  <div class="back-btn">
    <i class="fa-solid fa-backward"></i>
  </div>
  <% end %>
  <h1><%= @list.name %></h1>
</div>

<div class="p-5 d-flex flex-wrap gap-5">

  <% if @movies.any? %>
  <% @movies.each do |movie| %>
    <%= form_with(model: [@list, movie]) do |form| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h3><%= movie.title %></h3>
          <p class="card-text"><%= movie.overview %></p>
          <% bookmark = @bookmarks.find { |b| b.movie_id == movie.id } %>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= form.submit "Add to List", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h2>You currently have no movies in this list</h2>
<% end %>
</div>

<%= link_to "Add a Movie", new_list_bookmark_path(@list) %>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose a Movie</h5>
        <div class="ms-auto d-flex">
        <%= form_with(url: list_path, method: :get, class: "d-flex my-2 my-lg-0") do %>
        <%= text_field_tag :query, nil, class: "form-control me-2", placeholder: "Search", aria: { label: "Search" } %>
        <%= button_tag "Search", class: "btn btn-outline-primary my-2 my-sm-0", type: "submit" %>
        <% end %>
      </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="p-5 d-flex flex-wrap gap-5">

              <% if Movie.any? %>
  <% Movie.all.each do |movie| %>
    <%= link_to edit_list_path(@list) do %>
      <div class="card" style="width: 18rem;">
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h3><%= movie.title %></h3>
          <p class="card-text"><%= movie.overview %></p>
        </div>
      </div>
    <% end %>
  <% end %>
    <% else %>
      <h2>You currently have no movies in this list</h2>
    <% end %>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<%= link_to list_path(@list), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
