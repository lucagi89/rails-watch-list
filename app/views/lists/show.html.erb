<% image = @list.photo.key ? @list.photo.key : "../assets/images/default_photo.avif" %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path image,  crop: :fill%>')">
  <%= link_to lists_path do%>
  <div class="back-btn">
    <i class="fa-solid fa-backward"></i>
  </div>
  <% end %>
  <h1 class="title"><%= @list.name %></h1>
</div>

<div class="p-5 d-flex flex-wrap align-items-center gap-5">

  <% if @list.bookmarks.any? %>
  <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h3><%= bookmark.movie.title %></h3>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><%= bookmark.comment %></p>
        </div>
      </div>
  <% end %>
<% else %>
  <h2 style="width:100%; color:gray;" class="text-center">You currently have no movies in this list</h2>
<% end %>
<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>


<%= link_to list_path(@list), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>

