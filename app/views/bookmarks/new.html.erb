<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fG1vdmllfGVufDB8fDB8fHww)">
  <%= link_to lists_path do%>
  <div class="back-btn">
    <i class="fa-solid fa-backward"></i>
  </div>
  <% end %>
  <h1 class="title"><%= @list.name %></h1>
</div>

<div class="p-5 d-flex flex-wrap gap-5">

<% @movies.each do |movie| %>
  <div class="card d-flex flex-wrap gap-4" style="width: 18rem;">
    <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
    <div class="card-body d-flex flex-column justify-content-between">
      <div>
        <h3 class="card-text"><%= movie.title %></h3>
        <p class="card-text"><%= movie.overview %></p>
      </div>

      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.label :comment, label: "Add a bookmark:" %>
        <%= f.input :comment, label: false %>
        <%= f.hidden_field :movie_id, value: movie.id %>
        <%= f.button :submit, "Add Movie to #{@list.name}"  %>
      <% end %>
    </div>

  </div>
<% end %>
